<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.colorteory.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient2">


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Teoria das Cores"
            android:textSize="34sp"
            android:textColor="#FFFFFF"
            android:background="#673AB7"/>
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                android:id="@+id/lesson1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lição 1 - O que é cor?"
                style="@style/CustomTitle" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/lesson1_title"
                    android:background="@android:color/darker_gray"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lesson1_title"
                android:text="Cor é uma percepção visual quando existe luz. Em outras palavras, é uma manifestação da luz. A cor de um material é definido pela cor que ele reflete. Ou seja, um objeto azul não absorve cor azul."
                style="@style/CustomText"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lesson2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lição 2 - Cores Primárias"
                    style="@style/CustomTitle" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/lesson2_title"
                    android:background="@android:color/darker_gray"></View>

                <TextView
                    android:id="@+id/lesson2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lesson2_title"
                    android:text="Tudo tem origem em três cores básicas: azul, vermelho e o amarelo. Elas existem sem a mistura de outras cores, ou seja, não podem se decompor em outras."
                    style="@style/CustomText"/>

                <View
                android:id="@+id/lesson2_blue"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/lesson2"
                android:layout_marginLeft="80dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="#2196F3"/>

                <View
                    android:id="@+id/lesson2_red"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/lesson2"
                    android:layout_toRightOf="@id/lesson2_blue"
                    android:layout_margin="16dp"
                    android:background="#F44336"/>

                <View
                    android:id="@+id/lesson2_yellow"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/lesson2"
                    android:layout_toRightOf="@id/lesson2_red"
                    android:layout_marginTop="16dp"
                    android:background="#FFEB3B"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lesson3_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lição 3 - Cores Secundárias"
                    style="@style/CustomTitle" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/lesson3_title"
                    android:background="@android:color/darker_gray"></View>

                <TextView
                    android:id="@+id/lesson3_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lesson3_title"
                    android:text="Misturando duas cores primárias obtemos as cores secundárias. São elas: verde, laranja e roxo."
                    style="@style/CustomText"/>

                <TextView
                    android:id="@+id/lesson3_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lesson3_1"
                    android:text="Tente adivinhar qual as duas cores que formam cada uma das secundárias escrevendo o nome delas abaixo:"
                    style="@style/CustomText" />

                <View
                    android:id="@+id/lesson3_green"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/lesson3_2"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:background="#4CAF50"/>

                <View
                    android:id="@+id/lesson3_orange"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/lesson3_green"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="#FF9800"/>

                <View
                    android:id="@+id/lesson3_purple"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/lesson3_orange"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="#9C27B0"/>

                <EditText
                    android:id="@+id/green_answer_1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lesson3_2"
                    android:layout_toRightOf="@id/lesson3_green"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:inputType="textCapWords"
                    android:hint="Cor 1" />

                <TextView
                    android:id="@+id/green_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lesson3_2"
                    android:layout_toRightOf="@id/green_answer_1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:text="+"
                    android:textSize="30sp"/>

                <EditText
                    android:id="@+id/green_answer_2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lesson3_2"
                    android:layout_toRightOf="@id/green_plus"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:inputType="textCapWords"
                    android:hint="Cor 2" />


                <EditText
                    android:id="@+id/orange_answer_1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/green_answer_1"
                    android:layout_toRightOf="@id/lesson3_orange"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:inputType="textCapWords"
                    android:hint="Cor 1" />

                <TextView
                    android:id="@+id/orange_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/green_plus"
                    android:layout_toRightOf="@id/orange_answer_1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:text="+"
                    android:textSize="30sp"/>

                <EditText
                    android:id="@+id/orange_answer_2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/green_answer_2"
                    android:layout_toRightOf="@id/orange_plus"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:inputType="textCapWords"
                    android:hint="Cor 2" />

                <EditText
                    android:id="@+id/purple_answer_1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/orange_answer_1"
                    android:layout_toRightOf="@id/lesson3_purple"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:inputType="textCapWords"
                    android:hint="Cor 1" />

                <TextView
                    android:id="@+id/purple_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/orange_plus"
                    android:layout_toRightOf="@id/purple_answer_1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:text="+"
                    android:textSize="30sp"/>

                <EditText
                    android:id="@+id/purple_answer_2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/orange_answer_2"
                    android:layout_toRightOf="@id/purple_plus"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:inputType="textCapWords"
                    android:hint="Cor 2" />


                <Button
                    android:id="@+id/answer_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/purple_plus"
                    android:layout_toRightOf="@id/lesson3_purple"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="16dp"
                    android:text="Enviar"
                    android:background="@drawable/button_background"
                    android:onClick="activity"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lesson4_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lição 4 - Cores Terciárias"
                    style="@style/CustomTitle"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/lesson4_title"
                    android:background="@android:color/darker_gray"></View>

                <TextView
                    android:id="@+id/lesson4_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lesson4_title"
                    android:text="As cores terciárias são a mistura de uma cor primária com uma secundária e normalmente recebem o nome da cor que te deram origem. Exemplo: roxo-azulado, amarelo-esverdeado..."
                    style="@style/CustomText" />

                <TextView
                    android:id="@+id/lesson4_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lesson4_1"
                    android:text="Veja o círculo cromático com todas as cores:"
                    style="@style/CustomText"/>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_below="@id/lesson4_2"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/color_wheel"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lesson5_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lição 5 - Classificação"
                    style="@style/CustomTitle" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/lesson5_title"
                    android:background="@android:color/darker_gray"></View>

                <TextView
                    android:id="@+id/lesson5_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lesson5_title"
                    android:text="Cores Neutras: são aquelas que possuem pouca reflexão da luz, por exemplo, os tons de cinza e de marrom."
                    style="@style/CustomText" />

                <TextView
                    android:id="@+id/lesson5_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lesson5_1"
                    android:text="Cores Quentes: são aquelas cores que transmitem uma sensação de calor, como os tons de vermelho, amarelo e o laranja."
                    style="@style/CustomText"/>

                <TextView
                    android:id="@+id/lesson5_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lesson5_2"
                    android:text="Cores Frias: englobam as cores que transmitem sensação de frio, por exemplo, azul, verde e alguns tons de violeta."
                    style="@style/CustomText" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>